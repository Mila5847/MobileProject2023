<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragUpdateTrainer"
    android:background="@color/mainPage">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/updateTrainer"
            android:textSize="30sp"
            android:background="@color/lightwhite"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="25dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <EditText
                android:id="@+id/editUpdateIDTrainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter ID of the trainer to update"
                android:inputType="number"
                android:textSize="20sp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnUpdateTrainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/editTrainerFName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Trainer First Name"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editTrainerLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Trainer Last Name"
            android:textSize="20sp" />
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_margin="20dp"/>
        <TextView
            android:id="@+id/textViewTrainers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current List of Trainers"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtDispUpdateTrainers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>
</ScrollView>