<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/mainPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Trainer"
            android:textSize="30sp"
            android:background="@color/lightwhite"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="25dp"/>

        <EditText
            android:id="@+id/editTrainerFName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Trainer First Name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTrainerLName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Trainer Last Name"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnInsertTrainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Trainer"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:background="@color/buttonColor"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center" />
    </LinearLayout>

</ScrollView>
